# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = Peter Marreck
	email = lumbergh@gmail.com
[core]
	precomposeUnicode = true
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	side-by-side = true
	line-numbers = true

[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[safe]
	directory = /etc/nixos

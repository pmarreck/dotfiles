#!/usr/bin/env bash
set -euo pipefail

usage() {
	cat <<'USAGE'
Usage: get [options] URL [URL...]

Stream one or more remote files to stdout using wget (preferred) or curl.

Options:
  --help    Show this help message and exit.
  --about   Show a short description and exit.
  --        Treat all following arguments as downloader parameters.

All non-option arguments are forwarded to the underlying downloader.
USAGE
}

about() {
	printf '%s\n' "Fetch remote content to stdout with sensible defaults."
}

run_downloader() {
	if command -v wget >/dev/null 2>&1; then
		wget --xattr -c --progress=bar -O - -- "$@"
	elif command -v curl >/dev/null 2>&1; then
		curl -fL --progress-bar "$@"
	else
		echo "get: require wget or curl" >&2
		return 1
	fi
}

if [ $# -eq 0 ]; then
	usage >&2
	exit 1
fi

args=()
while [ $# -gt 0 ]; do
	case "$1" in
		--help)
			usage
			exit 0
			;;
		--about)
			about
			exit 0
			;;
		--)
			shift
			args=("$@")
			break
			;;
		*)
			args=("$@")
			break
			;;
	esac
	done

if [ ${#args[@]} -eq 0 ]; then
	usage >&2
	exit 1
fi

run_downloader "${args[@]}"
